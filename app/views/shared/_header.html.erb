<div class="navbar navbar-inverse bg-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Paranoia Computer", root_path, class: "navbar-brand anton" %>
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu" aria-expanded="false">
        <i class="fa fa-bars"></i>
      </button>
    </div>
    <div class="collapse navbar-collapse" id="menu">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-bullseye"></i> Missions
          </a>
          <ul class="dropdown-menu">
            <% if @missions.any? %>
              <% @missions.each do |m| %>
                <li><%= link_to "Mission #{m}", mission_path(m) %></li> 
              <% end %>
            <% else %>
              <li><a href="#"><em>No missions</em></a></li>
            <% end %>
          </ul>
        </li>
        <li>
          <%= link_to "<i class=\"fa fa-volume-up\"></i> Lines".html_safe, voice_lines_path %>
        </li>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <li><a data-toggle="collapse" href="#settingsDrawer">Settings</a></li>
      </ul>
    </div>
  </div>
</div>
