<div class="collapse" id="settingsDrawer">
  <h3>Voice settings</h3>
  <div class="row">
    <div class="col-md-3">
      <h4>Speed</h4>
      <div class="row">
        <div class="col-md-4">
          <input id="voice_speed_value" type="text" class="form-control" value="165" disabled />
        </div>
        <div class="col-md-8">
          <input type="range" name="voice_speed" id="voice_speed" value="165" min="50" max="200" class="form-control">
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <h4>Word gap</h4>
      <div class="row">
        <div class="col-md-4">
          <input id="voice_wordgap_value" type="text" class="form-control" value="3" disabled />
        </div>
        <div class="col-md-8">
          <input type="range" name="voice_wordgap" id="voice_wordgap" value="3" min="0" max="20" class="form-control">
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <h4>Pitch</h4>
      <div class="row">
        <div class="col-md-4">
          <input id="voice_pitch_value" type="text" class="form-control" value="50" disabled />
        </div>
        <div class="col-md-8">
          <input type="range" name="voice_pitch" id="voice_pitch" value="50" min="10" max="90" class="form-control">
        </div>
      </div>
    </div>
  </div>
</div>
